<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_window_bg"
    android:gravity="center_vertical"
    android:paddingTop="7dp"
    android:paddingBottom="11dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mishi.baseui.MSTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="导航"
            android:textColor="@color/ms_black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.mishi.baseui.MSTextView
            android:id="@+id/snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="导航"
            android:textColor="@color/ms_dark"
            android:textSize="12sp" />
    </LinearLayout>

    <com.mishi.baseui.MSButton
        android:id="@+id/map_other_map"
        android:layout_width="52dp"
        android:layout_height="24dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_map_othermap_selector"
        android:text="导航"
        android:textColor="@color/ms_white0"
        android:textSize="13sp" />
</LinearLayout>