<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context="com.mishi.baseComponents.MSPhoto.ImageCroppingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mishi.baseComponents.MSPhoto.widget.ClipImageLayout
            android:id="@+id/ui_image_cropping_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ms_home_light_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/img_crop_bar"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@color/transparent_button_pressed_bg">

            <com.mishi.baseui.MSTextView
                android:id="@+id/img_crop_bar_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizon_padding"
                android:paddingRight="@dimen/activity_horizon_padding"
                android:text="取消"
                android:textColor="@color/ms_white"
                android:textSize="@dimen/ll_small_text_size" />

            <com.mishi.baseui.MSTextView
                android:id="@+id/img_crop_bar_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizon_padding"
                android:paddingRight="@dimen/activity_horizon_padding"
                android:text="确定"
                android:textColor="@color/ms_white"
                android:textSize="@dimen/ll_small_text_size" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
